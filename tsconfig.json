{
    "compilerOptions": {
      // Default
      "target": "es5", 
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "strict": true, 
      "skipLibCheck": true,
  
      // Added
      "jsx": "react", 
      "module": "ESNext",  
      "declaration": true,
      "sourceMap": true,
      "outDir": "dist",
      "declarationDir": "dist",
      "moduleResolution": "bundler",
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "emitDeclarationOnly": true,
      "declarationMap": true,

      "paths": {
        "@/*": ["./src/*"]
      }
    }
  }